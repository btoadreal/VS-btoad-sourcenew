	function updateHitbox(obj:FlxSprite) // Helper function because the actual one is ass.
	{
		obj.width = Math.abs(obj.scale.x) * obj.frameWidth;
		obj.height = Math.abs(obj.scale.y) * obj.frameHeight;
		obj.centerOrigin();
	}

